@model List<EntityLayer.Concrete.About>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımda Veri Listesi</h2>
<br />

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Hakkımda Başlık</th>
        <th>Hakkımda Resim</th>
        <th>Aktif Yap</th>
        <th>Pasif Yap</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutId</td>
            <td>@item.AboutDetails1.Substring(0, 70)</td>
            <td><img src="@item.AboutImage1" class="img-fluid mb-2" / style="width:250px; height:100px;"></td>
            <td><a href="#" class="btn btn-success">Aktif Yap</a></td>
            <td><a href="#" class="btn btn-danger">Pasif Yap</a></td>
        </tr>
    }
</table>

@Html.Action("AboutPartial", "About")